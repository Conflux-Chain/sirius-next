{
  "name": "sirius-next",
  "version": "0.0.3",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "turbo run test",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write $(git diff --cached --name-only -- '*.json' '*.js' '*.ts' '*.tsx' '*.md')",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{json,js,ts,tsx,md}": [
      "pnpm run format"
    ]
  }
}
